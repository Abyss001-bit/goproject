.content{
  width: 85%;
  height: 400px;
  margin-top: 40px;
  margin-left: 7.5%;
}
.content_1{
  position: relative;
  width: 85%;
  height: 100px;
  margin-left: 7.5%;
  margin-top: 6%;
  margin-bottom: 6%;
