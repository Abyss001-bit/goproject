/* 第一部分 */
.carousel-view{
  position: relative;
  width: 85%;
  margin-left: 7.5%;
  height: 137px;
  /* border: #DD524D solid 1px; */
  box-shadow: 2px 2px 2px 2px rgba(0, 0, 0, 0.2);
}
.swiper-container{
