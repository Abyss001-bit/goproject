.all{
  position: relative;
  margin-top: 0%;
  width: auto;
  height: 600px;
  background: linear-gradient(rgb(236, 253, 253), rgb(207, 243, 250)); 
  /* background-color: rgb(50, 213, 241); */
}

.all view{
  width: 80%;
  height: 40px;
  margin-left: 10%;
  margin-top: 20px;
  border-radius: 10px;
  box-shadow: 3px 3px 3px 3px rgba(0, 0, 0, 0.5);
}

.all view:hover{
  background-color: rgb(207, 243, 250);
}

.all view text{
  height: 40px;
  line-height: 40px;
  margin-left: 20px;
}