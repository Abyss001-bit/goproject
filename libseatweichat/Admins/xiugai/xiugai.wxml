<!--Admins/daoru/daoru.wxml-->
<view class="all">
  <text class="contain1text">修改座位原信息</text>
  <view class="contain1">
    <view>
    <text>添加馆号信息</text><input type="text" placeholder="图书馆名" name="oldfenguan" bindinput="oldfenguanInput"/>
    </view>

    <view>
    <text>添加楼层信息</text><input type="text" placeholder="楼层" name="oldlouceng" bindinput="oldloucengInput"/>
    </view>

    <view>
    <text>添加室号信息</text><input type="text" placeholder="室号" name="oldbianhao" bindinput="oldbianhaoInput"/>
    </view>

    <view>
    <text>添加编号信息</text><input type="number" placeholder="座位号" name="oldnumber"    bindinput="oldnumberInput"/>
    </view>
    <button class="buttom" bindtap="oldsubmit">确认</button>
  </view>


  <text class="contain2text" >修改座位现在信息</text>
  <view class="contain2">
    <view>
    <text>添加馆号信息</text><input type="text" placeholder="图书馆名" name="fenguan" bindinput="fenguanInput"/>
    </view>

    <view>
    <text>添加楼层信息</text><input type="text" placeholder="楼层" name="louceng" bindinput="loucengInput"/>
    </view>

    <view>
    <text>添加室号信息</text><input type="text" placeholder="室号" name="bianhao" bindinput="bianhaoInput"/>
    </view>

    <view>
    <text>添加编号信息</text><input type="number" placeholder="座位号" name="number"    bindinput="numberInput"/>
    </view>
    <view>
    <text>添加座位状态</text><input type="number" placeholder="状态信息" name="status"    bindinput="statusInput"/>
    </view>
    <button class="buttom" bindtap="submit">确认</button>
  </view>
</view>