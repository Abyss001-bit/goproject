/* 第一部分 */

.all{
  position: relative;
  margin-top: 0%;
  width: auto;
  height: 600px;
  background: linear-gradient(rgb(242, 245, 245), rgb(138, 208, 248)); 
}

.logo{
  position: relative;
  width: auto;
  height: 137px;
  border: white solid 0.1px;
  /* background-image: url('https://gitee.com/itanrong/picstore/raw/master/libseatimages/login.jpg'); */
  background-image: url('https://github.com/Abyss001-bit/picture/blob/master/static/login.jpg?raw=true');
}
.logo .logo_box{
  margin-top: 20%;
  margin-left: 10%;
  width: 80%;
  height: 60px;
  /* border: rgba(248, 248, 248, 1) solid 1px; */
	border-radius: 10px;
  box-shadow: 2px 2px 2px 1px rgba(0, 0, 0, 0.2);
}
.logo_box text{
  display: block;
  text-align: center;
  font-size: larger;
  color: white;
  font-weight: 600;
  height: 100upx;
  width: auto;
  line-height: 100upx;
}

/* 第二部分 */
.content{
  position: relative;
  border: rgba(248, 248, 248, 1) solid 1px;
  border-radius: 10px;
  box-shadow: 2px 2px 2px 3px rgba(0, 0, 0, 0.2);
  width: 80%;
  height: 460upx;
  margin-top: 8%;
  margin-left: 10%;
}
.login_from{
  width: 100%;
  height: 100%;
}
.from{
  width: 100%;
  height: 130upx;
  border: red solid 1upx;
}
.form text{
  display: block;
  width: 100%;
  height: 20upx;
  line-height: 20upx;
  color: rgb(41, 57, 88);
  margin-left: 10%;
  margin-top: 2%;
  margin-bottom: 2%;
}
.login_from input{
  width: 80%;
  height: 40px;
  line-height: 40px;
  border-radius: 15px;
  border: rgb(114, 111, 111) solid 1px;
  border-radius: 10px;
  /* box-shadow: 2px 2px 2px 1px rgba(0, 0, 0, 0.2);  */
  margin-top: 5%;
  margin-left: 10%;
  margin-bottom: 2%;
}

.login_from button{
  width: 30%;
  margin-top: 2%;
  margin-bottom: 2%;
  color: black;
  background-color:rgb(189,226,246);
}
.login_from button:hover{
  background-color: #00A4FF;
}
.login_a{
  margin-top: 3%;
}
.login_a view{
  display: inline-block;
  text-decoration:none;  /*去除 a 的默认样式*/
  color: rgba(144,128,161, 0.8);
  margin-left: 20%;
  /* border: #00A4FF solid 1upx; */
 } 
 .login_a view:hover{
   color: #00A4FF;
  } 

