/* pages/recom/recom.wxss */
.all{
  position: relative;
  margin-top: 0%;
  width: auto;
  height: 600px;
  background: linear-gradient(rgb(236, 253, 253), rgb(207, 243, 250)); 
  /* background-color: rgb(50, 213, 241); */
}

.tiaojian{
  /* background-color: rgb(179, 226, 210); */
  position: absolute;
  margin-top: 20%;
  margin-left: 10%;
  width: 80%;
  height: 340px;
  /* border: rgb(95, 25, 25) solid 1px; */
	border-radius: 10px;
  box-shadow: 3px 3px 3px 3px rgba(0, 0, 0, 0.5);
}
.tiaojian view{
  height: 40px;
  line-height: 40px;
  width: auto;
  border-bottom: rgb(156, 152, 152) solid 1px;
}
.tiaojian text{
  display: inline-block;
  float: left;
  width: 80px;
  height: 40px;
  line-height: 40px;
  /* border: red solid 1px; */
}
.tiaojian .picker{
  display: inline-block;
  height: 40px;
  /* float: left; */
  width: 210px;
/* border: black solid 1px; */
}
.tiaojian button{
  margin-top: 5px;
  height: 40px;
  width: 100px;
  border: #fdf8f8 solid 1px;
	border-radius: 10px;
  box-shadow: 2px 2px 2px 1px rgba(0, 0, 0, 0.2);
}