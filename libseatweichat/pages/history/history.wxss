.text{
  display: inline-block;
  width: 40%;
  margin-left: 10%;
  height: 40px;
  line-height: 40px;
  text-align: left;
  /* border: red solid 1px; */
}
.bar{
  position: fixed;
  width: 100%;
  bottom: 0%;
  height: 40px;
  background-color: rgb(210, 209, 211);
}
.del{
  display: inline-block;
  width: 25%;
  height: 40px;
  line-height: 40px;
  text-align: center;
  color:black;
}
.del:hover{
  color: blue;
}
.list_history{
  position: relative;
  width: 90%;
