/* pages/register/register.wxss */
.all{
  position: relative;
  margin-top: 0%;
  width: auto;
  height: 600px;
  background: linear-gradient(rgb(242, 245, 245), rgb(138, 208, 248)); 
}
.logo{
  position: relative;
  width: 80%;
  height: 137px;
  margin-left: 10%;
  margin-top: 5%;
  border: white solid 1px;
  /* background-image: url('https://gitee.com/itanrong/picstore/raw/master/libseatimages/login.jpg'); */
  background-image: url('https://github.com/Abyss001-bit/picture/blob/master/static/register.jpg?raw=true');
}
.logo p{
  display: block;
  margin-top: 30%;
  margin-left: 10%;
  color:rgb(102, 245, 245);
  height: 40px;
  line-height: 40px;
  text-align: left;
  font-size: 20px;
  border-radius: 15px;
  /* box-shadow: 2px 2px 2px 1px rgba(0, 0, 0, 0.2); */
}
.content{
  position: relative;
  /* border: rgba(128,128,128, 1) solid 1px; */
  width: 80%;
  height: 250px;
  margin-left: 10%;
  margin-top: 5%;
  box-shadow: 2px 2px 2px 1px rgba(0, 0, 0, 0.2);
  border-radius: 15px;
}
.content text{
  display: inline-flex;
  color: rgba(128,128,128, 1);
  height: 100upx;
  line-height: 100upx;
  width: 30%;
  margin-left: 2%;
  margin-top: 2%;
}
.content .code{
  display: inline;
  margin: 0;
  padding: 0;
  border: 1px solid transparent;
  outline: none;
  font-weight: 100;
}
/* .content .code:hover{
  color: aqua;
} */
.content input{
  display: inline-flex;
  border-bottom: rgba(128,128,128, 1) solid 1px;
  height: 40px;
  width: 63%;
  line-height: 40px;
  margin-left: 3%;
  margin-top: 2%;
  
  /* border: red solid 1upx; */
}
.content label input{
  width: 25%;
  margin-right: 4%;
}
.content .button{
  width: 40%;
  margin-left: 30%;
  margin-top: 4%;
  margin-bottom: 12%;
  background-color:rgb(175,221,247);
}
.content .button:hover{
  background-color: #00A4FF;
}